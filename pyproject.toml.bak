[project]
name = "rtp"
version = "0.1.0"
description = "Add your description here"
readme = "README.md"
requires-python = ">=3.13"
dependencies = [
    "chromadb>=1.0.16",
    "pymupdf>=1.26.3",
    "python-docx>=1.2.0",
    "pyyaml>=6.0.2",
    "rich>=14.1.0",
    "textstat>=0.7.8",
    "typer>=0.16.0",
]

[project.scripts]
rtp = "rtp:main"

[build-system]
requires = ["uv_build>=0.8.8,<0.9.0"]
build-backend = "uv_build"
[project.scripts]
rtp = "rtp.cli:app"
